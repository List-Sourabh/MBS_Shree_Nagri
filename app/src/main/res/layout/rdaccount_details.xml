<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/act_bg"
    android:orientation="vertical"
    android:weightSum="13" >

    <include
        android:id="@+id/inc_id"
        layout="@layout/header" />

    <mbLib.CusFntTextView
        android:id="@+id/textViewBankName"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dip"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/darkest_orange"
        android:textSize="20sp" />

    <mbLib.CusFntTextView
        android:id="@+id/accNo"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/lbl_acc_no"
        android:textColor="@color/rep_txt_color"
        android:textStyle="bold" />

    <mbLib.CusFntTextView
        android:id="@+id/cust_name"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="15dip"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/rep_txt_color"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <mbLib.CusFntTextView
            android:id="@+id/txtlbl_rate_of_interest"
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="1dip"
            android:text="@string/lbl_rate_of_interest"
            android:textColor="#372c24" >
        </mbLib.CusFntTextView>

        <mbLib.CusFntTextView
            android:id="@+id/txtlbl_sanction_limit"
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="1dip"
            android:text="@string/lbl_sanction_limit"
            android:textColor="#372c24" >
        </mbLib.CusFntTextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <mbLib.CustomEditText
            android:id="@+id/txt_rate_of_interest"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="1dip"
            android:editable="false"
            android:layout_marginRight="10dip"
            android:textColor="@color/rep_txt_color" >
        </mbLib.CustomEditText>

        <mbLib.CustomEditText
            android:id="@+id/txt_sanction_limit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="1dip"
            android:editable="false"
            android:layout_marginRight="10dip"
            android:textColor="@color/rep_txt_color" >
        </mbLib.CustomEditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <mbLib.CusFntTextView
            android:id="@+id/txtlbl_drawing_power"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_weight="2"
            android:padding="1dip"
            android:text="@string/lbl_drawing_power"
            android:textColor="#372c24" />

        <!--
        <mbLib.CusFntTextView
            android:id="@+id/txtlbl__opening_amnt"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:text="@string/lbl_opening_amnt"
            android:textColor="#372c24" >
        </mbLib.CusFntTextView>
        -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <mbLib.CustomEditText
            android:id="@+id/txt_drawing_power"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="1dip"
            android:editable="false"
            android:layout_marginRight="10dip"
            android:textColor="@color/rep_txt_color" >
        </mbLib.CustomEditText>

        <mbLib.CusFntTextView
            android:id="@+id/opening_amnt"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:textColor="@color/rep_txt_color" >
        </mbLib.CusFntTextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="5dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="5dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="5dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="5dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="5dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="15dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4" >
    </LinearLayout>

</LinearLayout>