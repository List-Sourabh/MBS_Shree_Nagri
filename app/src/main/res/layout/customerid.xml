    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:orientation="vertical" 
        android:weightSum="3.7">
        
		<mbLib.CustomEditText
            android:id="@+id/txt_accno"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:hint="@string/hint_accno"
            android:maxLines="1"    
            android:layout_weight="1"         
            android:inputType="number"
            android:maxLength="15"
            android:text=""
            android:singleLine="true">
            <requestFocus />
        </mbLib.CustomEditText>        
        
       

        <mbLib.CustomEditText
            android:id="@+id/txt_mobileno"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:hint="@string/hint_regmobno"
            android:inputType="number"
            android:maxLines="1"
            android:layout_weight="1" 
            android:text=""
            android:singleLine="true" >
        </mbLib.CustomEditText>

        <mbLib.CustomButton
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="75dip"
            android:layout_marginRight="75dip"
              android:background="@drawable/roundedbutton"
            android:text="@string/text_submit"  
            android:id="@+id/btn_proceed"
            android:layout_weight="0.7" 
            style="@mipmap/button_bg"
            android:textColor="@color/white"/>
          
          <mbLib.CusFntTextView
            android:id="@+id/txt_heading"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_below="@+id/imageViewLogo"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="1"  
            android:gravity="center"
            android:text="" 
            android:textColor="@color/black"
            android:textSize="22sp"/> 
       
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:orientation="vertical" 
        android:weightSum="4">
  
     <mbLib.CusFntTextView
         android:id="@+id/custid"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dip"
